---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';

const products = [
  { name: 'Inventor', description: 'Desktop and mobile app for contextual learning', href: '/products/inventor' },
  { name: 'Tash', description: 'Terminal-based learning platform', href: '/products/tash' },
  { name: 'Web App', description: 'Comprehensive web-based learning platform', href: '/products/web-app' },
];
---

<Layout title="Savant - Dynamic Knowledge">
  <Menu />
  <div class="content-wrapper">
    <div class="hero-wrapper">
      <svg class="hero-bg" viewBox="0 0 1000 300" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <defs>
          <linearGradient id="grad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:var(--primary);stop-opacity:1" />
            <stop offset="100%" style="stop-color:var(--accent);stop-opacity:1" />
          </linearGradient>
        </defs>
        <path fill="url(#grad)" d="M0,0 C250,50 750,150 1000,0 L1000,300 L0,300 Z">
          <animate attributeName="d" 
            dur="20s" 
            repeatCount="indefinite"
            values="
              M0,0 C250,50 750,150 1000,0 L1000,300 L0,300 Z;
              M0,0 C250,150 750,50 1000,0 L1000,300 L0,300 Z;
              M0,0 C250,50 750,150 1000,0 L1000,300 L0,300 Z"
          />
        </path>
      </svg>
      <div class="hero-content">
        <h1>Welcome to <span class="text-gradient">Savant</span></h1>
        <p class="slogan">Knowledge that travels with you</p>
      </div>
    </div>
</div>
<main>
  <div class="content">
	<div class="product-grid">
	  {products.map((product) => (
		<Card title={product.name} body={product.description} href={product.href} />
	  ))}
	</div>
  </div>
</main>
</div>
<Footer />
</Layout>

<style>
	.content-wrapper {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
  }
	.hero-wrapper {
	  width: 100%;
	  margin-top: 100px; /* Increased space for the menu */
	}
	.hero {
	  position: relative;
	  height: 400px;
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  overflow: hidden;
	}
	.hero-bg {
	  position: absolute;
	  top: 0;
	  left: 0;
	  width: 100%;
	  height: 100%;
	  opacity: 0.1;
	}
	.hero-content {
	  position: relative;
	  z-index: 1;
	  text-align: center;
	}
	main {
	  margin: auto;
	  width: 100%;
	  max-width: 1200px;
	  color: var(--text);
	  font-size: 20px;
	  line-height: 1.6;
	}
	.content {
	  padding: 2rem 1rem;
	  box-sizing: border-box;
	}
	h1 {
	  font-size: 3.366rem;
	  font-weight: 700;
	  line-height: 1;
	  margin-bottom: 0.5em;
	}
	.slogan {
	  font-size: 1.421rem;
	}
	.text-gradient {
	  background-image: linear-gradient(45deg, var(--primary), var(--accent));
	  -webkit-background-clip: text;
	  -webkit-text-fill-color: transparent;
	  background-size: 400%;
	  background-position: 0%;
	}
	.product-grid {
	  display: grid;
	  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	  gap: 1rem;
	  padding: 0;
	}
  </style>