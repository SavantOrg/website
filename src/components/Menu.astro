<nav class="menu">
    <div class="menu-content">
      <a href="/" class="logo"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M5 13c0-5.088 2.902-9.436 7-11.182C16.097 3.564 19 7.912 19 13q-.002 1.236-.221 2.403l1.94 1.832a.5.5 0 0 1 .096.603l-2.495 4.575a.5.5 0 0 1-.793.114l-2.235-2.234a1 1 0 0 0-.707-.293H9.414a1 1 0 0 0-.707.293l-2.235 2.234a.5.5 0 0 1-.792-.114l-2.496-4.575a.5.5 0 0 1 .096-.603l1.94-1.832Q5.002 14.236 5 13m1.475 6.696l.817-.817a3 3 0 0 1 2.122-.88h5.171a3 3 0 0 1 2.122.88l.817.817l.982-1.8l-1.1-1.04a2 2 0 0 1-.593-1.82A11 11 0 0 0 17 13c0-3.87-1.995-7.3-5-8.96C8.995 5.7 7 9.13 7 13q0 1.038.186 2.036a2 2 0 0 1-.593 1.82l-1.1 1.04zM12 13a2 2 0 1 1 0-4a2 2 0 0 1 0 4"/></svg></a>
      <button class="hamburger" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="menu-items">
        <li><a href="/products">Products</a></li>
        <li><a href="/catalog">Course Catalog</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/pricing">Pricing</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </div>
  </nav>
  
  <script>
    const hamburger = document.querySelector('.hamburger');
    const menuItems = document.querySelector('.menu-items');
  
    hamburger.addEventListener('click', () => {
      hamburger.classList.toggle('active');
      menuItems.classList.toggle('active');
    });
  </script>
  
  <style>
    .menu {
      position: fixed;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 1200px;
      background-color: rgba(8, 6, 30, 0.8);
      backdrop-filter: blur(10px);
      border-radius: 30px;
      padding: 0.75rem 1.5rem;
      z-index: 1000;
      box-shadow: 0 0 20px rgba(155, 149, 233, 0.1);
      border: 1px solid rgba(155, 149, 233, 0.2);
    }
  
    .menu-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  
    .logo {
      color: var(--text);
      text-decoration: none;
      font-size: 1.2rem;
      font-weight: bold;
    }
  
    .menu-items {
      display: flex;
      gap: 1.5rem;
      list-style-type: none;
      margin: 0;
      padding: 0;
    }
  
    .menu-items a {
      color: var(--text);
      text-decoration: none;
      font-size: 1rem;
      transition: color 0.3s ease, transform 0.3s ease;
      display: inline-block;
    }
  
    .menu-items a:hover {
      color: var(--accent);
      transform: translateY(-3px);
    }
  
    .hamburger {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      width: 30px;
      height: 20px;
    }
  
    .hamburger span {
      display: block;
      width: 100%;
      height: 2px;
      background-color: var(--text);
      margin-bottom: 5px;
      transition: 0.3s;
    }
  
    @media (max-width: 768px) {
      .menu-items {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: rgba(8, 6, 30, 0.95);
        padding: 1rem;
        border-radius: 0 0 30px 30px;
      }
  
      .menu-items.active {
        display: flex;
      }
  
      .hamburger {
        display: block;
      }
  
      .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
      }
  
      .hamburger.active span:nth-child(2) {
        opacity: 0;
      }
  
      .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -7px);
      }
    }
  </style>