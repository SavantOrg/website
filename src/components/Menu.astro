  <style>
    .menu {
      position: fixed;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 1200px;
      background-color: rgba(8, 6, 30, 0.8);
      backdrop-filter: blur(10px);
      border-radius: 30px;
      padding: 0.75rem 1.5rem;
      z-index: 1000;
      box-shadow: 0 0 20px rgba(155, 149, 233, 0.1);
      border: 1px solid rgba(155, 149, 233, 0.2);
    }
  
    .menu-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  
    .logo {
      color: var(--text);
      text-decoration: none;
      font-size: 1.2rem;
      font-weight: bold;
    }
  
    .menu-items {
      display: flex;
      gap: 1.5rem;
      list-style-type: none;
      margin: 0;
      padding: 0;
    }
  
    .menu-items a {
      color: var(--text);
      text-decoration: none;
      font-size: 1rem;
      transition: color 0.3s ease, transform 0.3s ease;
      display: inline-block;
    }
  
    .menu-items a:hover {
      color: var(--accent);
      transform: translateY(-3px);
    }
  
    .hamburger {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      width: 30px;
      height: 20px;
    }
  
    .hamburger span {
      display: block;
      width: 100%;
      height: 2px;
      background-color: var(--text);
      margin-bottom: 5px;
      transition: 0.3s;
    }
  
    @media (max-width: 768px) {
      .menu-items {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: rgba(8, 6, 30, 0.95);
        padding: 1rem;
        border-radius: 0 0 30px 30px;
      }
  
      .menu-items.active {
        display: flex;
      }
  
      .hamburger {
        display: block;
      }
  
      .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
      }
  
      .hamburger.active span:nth-child(2) {
        opacity: 0;
      }
  
      .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -7px);
      }
    }
  </style>